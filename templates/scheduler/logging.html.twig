{% extends "base.html.twig" %}
{% block title %}{{ 'schedule_logging.list.title'|trans }}{% endblock title %}
{% block pageTitle %}{{ 'schedule_logging.list.title'|trans }}&nbsp;-&nbsp;{{ recurringSchedule.name }}{% endblock pageTitle %}

{% block content %}
    <div class="table-responsive table-stripped">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'schedule_logging.recurring_status'|trans }}</th>
                <th>{{ 'schedule_logging.recurring_message'|trans }}</th>
                <th>{{ 'schedule_logging.recurring_time_executed'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for schedulelog in recurringSchedule.schedulelog|slice(0, 25) %}
                <tr>
                    <td>
                        {% if schedulelog.runSuccessful == true %}
                            {{ 'schedule_logging.run_success'|trans }}
                        {% else %}
                            {{ 'schedule_logging.run_failed'|trans }}
                        {% endif %}
                    </td>
                    <td>{{ schedulelog.message }}</td>
                    <td>{{ schedulelog.timeExecuted|date("D M j, G:i:s - Y", "Europe/Amsterdam") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}
