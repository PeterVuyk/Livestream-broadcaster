{% trans_default_domain 'schedule_list' %}
<tr class="{% if recurringSchedule.disabled == true %} text-muted{% endif %}">
    <td>
        <a href="{{ path('schedule_toggle_disabling', {'scheduleId': recurringSchedule.id}) }}" >
            {% if recurringSchedule.disabled == true %}
                <span class="text-danger fa fa-power-off fa-lg"></span> <span class="sr-only">&nbsp;</span>
            {% else %}
                <span class="text-success fa fa-power-off fa-lg"></span> <span class="sr-only">&nbsp;</span>
            {% endif %}
        </a>
    </td>
    <td>{{ recurringSchedule.name }}</td>
    <td>{{ recurringSchedule.command }}</td>
    <td>
        {% if recurringSchedule.runWithNextExecution == true %}
            {{ 'scheduler_list.run_with_next_execution'|trans }}
        {% else %}
            {{ 'scheduler_list.recurring_time_prefix'|trans }}&nbsp;
            {{ recurringSchedule.executionDay|trans|lower }}&nbsp;
            {{ 'scheduler_list.recurring_time_at'|trans }}&nbsp;
            {{ recurringSchedule.executionTime|date("G:i", "Europe/Amsterdam") }}
        {% endif %}
    </td>
    <td>
        {% if recurringSchedule.lastExecution is null %}-{% else %}{{ recurringSchedule.lastExecution|date("D M j, G:i:s", "Europe/Amsterdam") }}{% endif %}
        {% set scheduleLog = recurringSchedule.scheduleLog|first ? recurringSchedule.scheduleLog|first : null %}
        {% if scheduleLog is not null and scheduleLog.runSuccessful == true %}
            <span class="fa fa-check text-center text-success fa-lg"></span>
        {% elseif scheduleLog is not null and scheduleLog.runSuccessful == false %}
            <span class="fa fa-warning text-danger fa-lg"></span>
        {% endif %}
    </td>
    <td>
        {% if scheduleLog is not null %}
            <a href="{{ path('schedule_view_logging', {'scheduleId': recurringSchedule.id}) }}">
                <span class="fa fa-eye fa-lg"></span>
            </a>
        {% endif %}
    </td>
    <td>{{ recurringSchedule.priority }}</td>
    <td style="min-width: 90px;">
        {% if recurringSchedule.wrecked == true and scheduleLog is not null and scheduleLog.runSuccessful == false %}
            <a href="#js-rerun-failed-schedule-modal-{{ recurringSchedule.id }}" data-toggle="modal">
                <span class="fa fa-undo text-warning fa-lg"></span>
            </a>
            {{ include('scheduler/list/modal/rerunFailedModal.html.twig', {'scheduledItem': recurringSchedule, 'path': 'schedule_unwreck'}) }}
        {% endif %}
        <a href="{{ path('schedule_edit', {'scheduleId': recurringSchedule.id}) }}" >
            <span class="text-info fa fa-edit fa-lg"></span> <span class="sr-only">{{ "schedule.action.edit"|trans }}</span>
        </a>

        <a href="#js-delete-scheduled-modal-{{ recurringSchedule.id }}" data-toggle="modal">
            <span class="text-danger fa fa-trash fa-lg"></span>
        </a>
        {{ include('scheduler/list/modal/deleteModal.html.twig', {'scheduledItem': recurringSchedule, 'path': 'schedule_remove'}) }}

        <a href="#js-execute-scheduled-modal-{{ recurringSchedule.id }}" data-toggle="modal">
            <span class="text-{% if recurringSchedule.runWithNextExecution == true %}muted{% else %}success{% endif %} fa fa-play fa-lg"></span>
        </a>
        {{ include('scheduler/list/modal/executeModal.html.twig', {'scheduledItem': recurringSchedule, 'path': 'schedule_execution'}) }}
    </td>
</tr>
