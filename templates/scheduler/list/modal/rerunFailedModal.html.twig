{% trans_default_domain 'modal' %}
<div class="modal" id="js-rerun-failed-schedule-modal-{{ scheduledItem.id }}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'schedule_rerun_failed.action.title_rerun_failed_schedule'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'schedule_rerun_failed.confirm.rerun_failed_schedule'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'schedule_rerun_failed.action.cancel'|trans }}</button>
                <button onclick="location.href='{{ path(path, {'scheduleId': scheduledItem.id}) }}'"
                        type="button" class="btn btn-primary">{{ 'schedule_rerun_failed.action.activate'|trans }}</button>
            </div>
        </div>
    </div>
</div>
