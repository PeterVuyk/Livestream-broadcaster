{% extends "base.html.twig" %}
{% set active_page = 'users' %}
{% block title %}{{ 'user.list.title'|trans }}{% endblock title %}
{% block pageTitle %}{{ 'user.list.title'|trans }}{% endblock pageTitle %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">{% trans %}users_list.column_username{% endtrans %}</th>
            <th scope="col">{% trans %}users_list.column_email{% endtrans %}</th>
            <th scope="col">{% trans %}user_list.column_action{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr {% if user.isActive == false %}class="text-muted" {% endif %}>
                <td>
                    <a href="{{ path('user_toggle_disabling', {'userId': user.id}) }}" >
                        {% if user.isActive == true %}
                            <span class="text-success glyphicon glyphicon-off"></span> <span class="sr-only">&nbsp;</span>
                        {% else %}
                            <span class="text-danger glyphicon glyphicon-off"></span> <span class="sr-only">&nbsp;</span>
                        {% endif %}
                    </a>
                </td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_details', {'userId': user.id}) }}" >
                        <span class="text-info glyphicon glyphicon-pencil"></span>
                    </a>

                    <a href="#js-delete-user-modal-{{ user.id }}" data-toggle="modal" data-url="{{ path('user_delete', {'userId': user.id}) }}">
                        <span class="text-danger glyphicon glyphicon-trash"></span>
                    </a>
                    {{ include('user/modal/deleteModal.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('registration') }}" class="btn btn-primary btn-lg pull-right" role="button">{{ 'users_list.registration_button'|trans }}</a>
{% endblock content %}
