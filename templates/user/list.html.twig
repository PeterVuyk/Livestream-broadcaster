{% extends "base.html.twig" %}
{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">{% trans %}users_list.column_id{% endtrans %}</th>
            <th scope="col">{% trans %}users_list.column_username{% endtrans %}</th>
            <th scope="col">{% trans %}users_list.column_email{% endtrans %}</th>
            <th scope="col">{% trans %}users_list.column_active{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isActive }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="registration" class="btn btn-secondary">{% trans %}users_list.registration_button{% endtrans %}</a>
{% endblock %}
